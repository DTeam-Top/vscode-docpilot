{
  "name": "vscode-docpilot",
  "displayName": "DocPilot",
  "description": "View PDF files in VSCode from local files or remote URLs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onChatParticipant:docpilot"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "docpilot.openLocalPdf",
        "title": "Open Local PDF",
        "category": "DocPilot"
      },
      {
        "command": "docpilot.openPdfFromUrl",
        "title": "Open PDF from URL",
        "category": "DocPilot"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "docpilot.openLocalPdf",
          "when": "resourceExtname == .pdf",
          "group": "navigation"
        }
      ]
    },
    "chatParticipants": [
      {
        "id": "docpilot.chat-participant",
        "name": "docpilot",
        "fullName": "DocPilot",
        "description": "PDF document assistant for viewing and summarizing PDFs",
        "isSticky": false,
        "commands": [
          {
            "name": "summarise",
            "description": "Summarise a PDF file and display it in the viewer"
          },
          {
            "name": "cache-stats",
            "description": "Show summary cache statistics"
          },
          {
            "name": "clear-cache",
            "description": "Clear all cached summaries"
          }
        ]
      }
    ],
    "customEditors": [
      {
        "viewType": "docpilot.pdfEditor",
        "displayName": "DocPilot PDF Viewer",
        "selector": [
          {
            "filenamePattern": "*.pdf"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-assets",
    "copy-assets": "mkdir -p out/webview && cp -r src/webview/assets out/webview/ && cp -r src/webview/templates out/webview/ && cp -r src/webview/scripts out/webview/",
    "watch": "tsc -watch -p ./",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check src/",
    "test": "npm run compile-tests && node out/test/runTest.js",
    "test:unit": "npm run compile-tests && node out/test/runTest.js --suite unit",
    "test:integration": "npm run compile-tests && node out/test/runTest.js --suite integration",
    "compile-tests": "rm -rf out && tsc -p ./ --outDir out && npm run copy-assets"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "16.x",
    "@types/sinon": "^17.0.2",
    "@types/sinon-chai": "^4.0.0",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.3.8",
    "chai": "^4.4.1",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "typescript": "^4.9.4"
  }
}
